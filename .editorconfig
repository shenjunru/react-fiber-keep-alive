# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

[*.{js,ts,jsx,tsx,es,mjs}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[node_modules/**]
trim_trailing_whitespace = ignore
insert_final_newline = ignore
indent_style = ignore
indent_size = ignore
